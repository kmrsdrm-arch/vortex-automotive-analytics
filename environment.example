# ==================================================================================
# VORTEX - Automotive Intelligence Platform
# Environment Variables Configuration Template
# ==================================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env in the project root
# 2. Fill in your actual values (especially DATABASE_URL and OPENAI_API_KEY)
# 3. Never commit .env to version control
#
# ==================================================================================

# ===================================================================================
# DATABASE CONFIGURATION
# ===================================================================================

# PostgreSQL connection URL
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Development example:
DATABASE_URL=postgresql://automotive_user:automotive_password@localhost:5432/automotive_analytics

# Production example (Render.com):
# DATABASE_URL=postgresql://vortex_user:xxx@dpg-xxx.oregon-postgres.render.com/vortex_analytics

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===================================================================================
# OPENAI API CONFIGURATION
# ===================================================================================

# Your OpenAI API key - REQUIRED
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-actual-api-key-here

# OpenAI model selection
OPENAI_MODEL_PRIMARY=gpt-4-turbo-preview
OPENAI_MODEL_SECONDARY=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000

# ===================================================================================
# API SERVER CONFIGURATION
# ===================================================================================

# API server host and port (for local development)
API_HOST=0.0.0.0
API_PORT=8000

# API URL for dashboard to connect to
# Development:
API_URL=http://localhost:8000
# Production (Render.com will auto-set this):
# API_URL=https://vortex-api.onrender.com

# CORS origins (comma-separated if multiple)
# Development:
API_CORS_ORIGINS=["http://localhost:8501"]
# Production example:
# API_CORS_ORIGINS=["https://vortex-dashboard.onrender.com","http://localhost:8501"]

# ===================================================================================
# DASHBOARD CONFIGURATION
# ===================================================================================

# Streamlit dashboard port
DASHBOARD_PORT=8501

# ===================================================================================
# LOGGING CONFIGURATION
# ===================================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===================================================================================
# VECTOR STORE CONFIGURATION
# ===================================================================================

# ChromaDB vector database path
CHROMADB_PATH=./data/chromadb

# ===================================================================================
# FEATURE FLAGS
# ===================================================================================

# Enable RAG (Retrieval-Augmented Generation) features
ENABLE_RAG=true

# Enable response caching (reduces API costs)
ENABLE_CACHING=false

# ===================================================================================
# APPLICATION METADATA
# ===================================================================================

APP_NAME=VORTEX - Automotive Intelligence Platform
APP_VERSION=2.0.0

# Debug mode (true for development, false for production)
DEBUG=false

